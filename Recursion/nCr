#include<iostream>

using namespace std;

int fact(int n){
    if(n==0)
        return 1;
    return fact(n-1)*n;
}

int ncr(int n,int r){
    int num,den;
    num=fact(n);
    den=fact(n-r)*fact(r);
    
    return num/den;
}

int NCR(int n,int r){
    if(r==0||n==r)
        return 1;
    return NCR(n-1,r-1)+NCR(n-1,r);
}

int main(){
    int x,y;
    cout<<"Enter the numbers: "<<endl;
    cin>>x>>y;
    
    int p=ncr(x,y);
    int r=NCR(x,y);
    cout<<"Result: "<<r<<endl;
    cout<<"Result: "<<p<<endl;
    
    return 0;
}
